#: import gch kivy.utils.get_color_from_hex

<WelcomeScreen>
    name:"welcome_screen"
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source:"pexels-mathilde-langevin-11719116.jpg"
    MDLabel:
        text:"MyDiary"
        halign: "center"
        pos_hint:{"center_y": .85}
        font_size: "50sp"
        font_name: 'POLAROID.otf'
        theme_text_color: 'Custom'
        text_color: "grey"

    MDLabel:
        text:"You can now share your personal life to your friends, and with more privacy."
        halign: "center"
        pos_hint:{"center_y": .30,'center_x': .50}
        font_size: "15sp"
        theme_text_color: 'Custom'
        text_color: "white"
        font_name:'BridalPartiesDemoRegular.ttf'

    MDFillRoundFlatButton:
        text: "login"
        pos_hint: {'center_x': .20, 'center_y': .55}
        text_color: "black"
        font_size : "20sp"
        size_hint_x: .30
        md_bg_color: "grey"
        font_name: "Roboto-Bold"
        on_press:root.manager.current = "login_screen"

    MDFillRoundFlatButton:
        text: "sign up"
        pos_hint: {'center_x': .20, 'center_y': .45}
        text_color: "black"
        font_size : "20sp"
        size_hint_x: .30
        md_bg_color: "grey"
        font_name: "Roboto-Bold"
        on_press:root.manager.current = "signup_screen"