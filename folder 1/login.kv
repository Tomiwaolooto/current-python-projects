<LoginScreen>
    name: "login_screen"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "pexels-mathilde-langevin-11719116.jpg"
    MDTextField:
        id: email
        hint_text:"Email or Username"
        hint_text_color_normal:"black"
        hint_text_color_focus:"grey"
        line_color_normal:"grey"
        line_color_focus: "white"
        size_hint_x: .60
        pos_hint: {"center_x": .40, "center_y": .60}
        mode: "fill"
        text_color_normal: "white"
        text_color_focus: "black"
        text_name:"Roboto-Bold"

    MDTextField:
        id: password
        hint_text:"password"
        hint_text_color_normal:"black"
        hint_text_color_focus:"grey"
        line_color_normal:"grey"
        line_color_focus: "white"
        size_hint_x: .60
        pos_hint: {"center_x": .40, "center_y": .50}
        mode: "fill"
        text_color_normal: "white"
        text_color_focus: "black"
        text_name:"Roboto-Bold"

    MDFillRoundFlatButton:
        text: "login"
        pos_hint: {'center_x': .5, 'center_y': .30}
        text_color: "black"
        font_size : "20sp"
        size_hint_x: .30
        md_bg_color: "grey"
        font_name: "Roboto-Bold"
        on_press:root.login()

    MDFillRoundFlatButton:
        text: "don't have an account? sign-up!"
        pos_hint: {'center_x': .50, 'center_y': .20}
        text_color: "black"
        font_size : "20sp"
        size_hint_x: .60
        md_bg_color: "grey"
        font_name: "Roboto-Bold"
        on_press: root.manager.current = "signup_screen"

    MDIconButton:
        icon: "arrow-left"
        theme_icon_color: "Custom"
        icon_colour: "black"
        pos_hint: {"center_x": .05, "center_y": .90}
        on_press:root.manager.current = "welcome_screen"